<h2>Books</h2>

<table>
    <tr>
        <th>Name</th>
        <th>Author</th>
    </tr>
    <% @books.each do |book| %>                    
        <tr>
            <td><%= book.name %><td>
            <td><%= book.author %><td>
            <td><%= link_to "Edit", edit_book_path(book) %></td>
            <td><%= link_to "Delete", book_path(book), :method => :delete %></td>
        </tr>
    <% end %>
</table>

</br>

<%= link_to "New Book", new_book_path %>
<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>